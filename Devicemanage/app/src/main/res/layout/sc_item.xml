<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/sc_item"
    app:contentView="@+id/content"

    app:rightMenuView="@+id/right"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:padding="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"

            android:text="1"
            android:id="@+id/num_sc"
            android:textColor="@color/grey4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.hnucm18jr.devicemanage.Untils.RadiusCardView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            app:layout_constraintLeft_toRightOf="@id/num_sc"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:rcv_topRightRadiu="5dp"
            app:rcv_bottomLeftRadiu="5dp"
            app:rcv_topLeftRadiu="5dp"
            android:layout_marginTop="@dimen/dp_10"

            app:rcv_bottomRightRadiu="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test3"
                android:scaleType="fitXY"/>

        </com.hnucm18jr.devicemanage.Untils.RadiusCardView>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雷蛇键盘"
            app:layout_constraintTop_toTopOf="@id/image"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toRightOf="@id/id2"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空闲"
            app:layout_constraintBottom_toBottomOf="@id/image"
            android:layout_marginBottom="5dp"

            android:id="@+id/isuse"
            android:textColor="@color/green"
            app:layout_constraintLeft_toLeftOf="@id/id2"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电脑配件"
            android:textSize="@dimen/sp_10"
            android:id="@+id/type"
            android:textColor="@color/grey3"
            app:layout_constraintTop_toBottomOf="@id/id2"
            app:layout_constraintLeft_toLeftOf="@id/id2"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/type"
            android:text="普通设备"
            android:textSize="@dimen/sp_10"

            android:id="@+id/normal"
            android:textColor="@color/grey3"

            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/text_bg"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="查看"
            android:textSize="@dimen/sp_10  "
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image"

            android:textSize="@dimen/sp_14"
            android:text="SP-445487"
            android:id="@+id/id2"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toRightOf="@id/image"
            android:layout_marginLeft="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/holo_red_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"


            android:textColor="@color/white"
            android:gravity="center"
            android:text="取消收藏" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>