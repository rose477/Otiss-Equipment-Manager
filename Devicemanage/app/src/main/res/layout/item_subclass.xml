<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/item"
    android:layout_height="wrap_content">

    <com.hnucm18jr.devicemanage.Untils.RadiusCardView
        android:id="@+id/head1"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        app:rcv_topRightRadiu="3dp"
        app:rcv_bottomRightRadiu="3dp"
        app:rcv_bottomLeftRadiu="3dp"
        app:rcv_topLeftRadiu="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/head"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test2"
            android:scaleType="fitXY"
            />
    </com.hnucm18jr.devicemanage.Untils.RadiusCardView>

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/head1"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toTopOf="@id/head1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content"
        tools:text="名字"
        />

    <TextView
        android:id="@+id/tv_dsc"
        android:layout_marginTop="1dp"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey3"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="描述"
        />

    <TextView
        android:id="@+id/tv_author"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="空闲"

        app:layout_constraintLeft_toLeftOf="@id/tv_dsc"
        app:layout_constraintTop_toBottomOf="@id/tv_dsc"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/green"
        />

    <ImageView
        android:id="@+id/sc"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@drawable/shoucang_bg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
