                        android:layout_marginTop="10dp"
                        android:background="@drawable/a3_bg"
                        app:layout_constraintEnd_toStartOf="@+id/constraintLayout44"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/constraintLayout1"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout">

                        <ImageView
                            android:id="@+id/imageView33"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@mipmap/type7"


                            app:layout_constraintBottom_toTopOf="@+id/textView33"
                            app:layout_constraintHorizontal_bias="0.5"
