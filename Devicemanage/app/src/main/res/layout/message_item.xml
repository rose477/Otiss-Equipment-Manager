<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hnucm18jr.devicemanage.Untils.CircleImageView
        android:id="@+id/head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/headz"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/pj_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周小吕"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/head"
        app:layout_constraintLeft_toRightOf="@id/head"
        android:layout_marginLeft="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pj_time"
        android:text="3分钟前"
        app:layout_constraintTop_toBottomOf="@id/pj_name"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/pj_name"
        android:textColor="@color/grey3"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="唐小波你好，我可以借用你的惠普电脑吗"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintLeft_toLeftOf="@id/head"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/agree"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:text="同意"
        android:gravity="center"
        android:background="@drawable/button2_bg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/refuse"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:text="拒绝"
        android:gravity="center"
        android:background="@drawable/buttonbg"
        app:layout_constraintRight_toLeftOf="@id/agree"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/agree"
        />


</androidx.constraintlayout.widget.ConstraintLayout>