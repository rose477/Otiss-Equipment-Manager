<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_70"
        android:id="@+id/head"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_10"

        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/imagehead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/head"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/head"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/head"

        android:textColor="@color/black"/>
    <TextView

        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="键盘"
        android:layout_marginLeft="@dimen/dp_2"
        app:layout_constraintLeft_toRightOf="@id/type"

        app:layout_constraintTop_toTopOf="@id/head"

        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态:"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_3"

        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="@id/type"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/ues2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空闲"
        android:layout_marginLeft="@dimen/dp_10"
android:textSize="@dimen/sp_12"
        android:textColor="@color/green"
        android:layout_marginTop="@dimen/dp_3"

        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toRightOf="@id/use" />
    <TextView
        android:id="@+id/zy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通设备"
        app:layout_constraintBottom_toBottomOf="@id/head"
        app:layout_constraintLeft_toLeftOf="@id/type"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备编码:JP157-7"
        app:layout_constraintBottom_toBottomOf="@id/head"
        app:layout_constraintLeft_toRightOf="@id/zy"
        android:layout_marginLeft="3dp"
        android:textSize="@dimen/sp_12"/>

        android:layout_marginBottom="@dimen/dp_10"/>
</androidx.constraintlayout.widget.ConstraintLayout>