<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Shebei.Wode_ragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/find2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/main"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/top1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"

            android:layout_marginRight="5dp"

            android:background="@drawable/search_bg"

            app:layout_constraintVertical_bias="0.7000003"
            app:layout_constraintLeft_toLeftOf="parent"

                  app:layout_constraintRight_toRightOf="parent"


            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintBottom_toBottomOf="parent"


            >

            <ImageView
                android:id="@+id/find0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/find"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:text="搜索你想借用的设备"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@id/find0"
                app:layout_constraintLeft_toRightOf="@id/find0"
                app:layout_constraintTop_toTopOf="@id/find0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_class"
        android:layout_width="90dp"
        app:layout_constraintTop_toBottomOf="@id/find2"
        app:layout_constraintLeft_toLeftOf="parent"

        android:background="@color/white"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_student"
        app:layout_constraintTop_toBottomOf="@id/find2"
        app:layout_constraintLeft_toRightOf="@id/rv_class"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>